<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <package name="basicstruts2" extends="struts-default" >
        <action name="home" class="com.cliffhangout.actions.HomeAction" method="execute">
            <result name="success">/layout.jsp</result>
        </action>
        <action name="search" class="com.cliffhangout.actions.SearchSiteAction" method="execute">
            <result name="success">/layout.jsp</result>
        </action>
        <action name="site" class="com.cliffhangout.actions.SiteInfoAction" method="execute">
            <result name="success" type="redirectAction">
                <param name="actionName">site</param>
                <param name="idSite">${idSite}</param>
            </result>
            <result name="input">/layout.jsp</result>
            <result name="error">/layout.jsp</result>
        </action>
        <action name="login" class="com.cliffhangout.actions.LoginAction" method="execute">
            <result name="success" type="redirect">/home.action</result>
            <result name="input">/layout.jsp</result>
            <result name="error">/layout.jsp</result>
        </action>
        <action name="logout" class="com.cliffhangout.actions.LogoutAction" method="execute">
            <result name="success" type="redirect">/home.action</result>
        </action>
    </package>
</struts>